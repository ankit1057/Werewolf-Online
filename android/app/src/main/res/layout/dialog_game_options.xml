<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color1"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="Game Options"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_num"
        android:textColor="@color/color4"
        android:textSize="18dp"
        android:text="Number of players :"
        android:gravity="center_vertical"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_player"
        android:textColor="@color/color1"
        android:textSize="28dp"
        android:paddingRight="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/text_num"/>


    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/num_picker"
        android:layout_below="@id/text_num"
        android:layout_marginTop="30dp"
        android:foregroundTint="@color/color1"
        android:backgroundTint="@color/color1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:background="@drawable/game_button_background"
        android:textColor="@color/color3"
        android:text="Create"
        android:textSize="20dp"
        android:layout_below="@+id/num_picker"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>